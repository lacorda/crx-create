{
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "allowJs": false,
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": [
      "vite/client",
      "node"
    ],
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./common/global.d.ts"
    ],
    "paths": {
      "@root/*": [
        "./*"
      ],
      "@common/*": [
        "./common/*"
      ],
      "@packages/*": [
        "./packages/*"
      ],
      "virtual:reload-on-update-in-background-script": [
        "./common/global.d.ts"
      ],
      "virtual:reload-on-update-in-view": [
        "./common/global.d.ts"
      ]
    }
  },
  "include": [
    "common",
    "utils",
    "packages",
    "vite.config.ts",
    "node_modules/@types",
    "project.config.ts"
  ]
}